{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "TTDS Movie Search API"
  },
  "paths": {
    "/query_search": {
      "post": {
        "tags": [
          "Movies"
        ],
        "summary": "Sample endpoint returning movies",
        "requestBody": {
          "description": "Request body object for specifying query parameters, for example movie ids.",
            "required": false,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "query": {
                      "type": "string"
                    },
                    "filter_title": {
                      "type": "string"
                    },
                    "filter_keywords": {
                      "type": "string"
                    },
                    "filter_years": {
                      "type": "string"
                    }
                  }
                }
              }
            }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/query_search_response"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "movie": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "year": {
            "type": "number",
            "format": "integer"
          },
          "rating": {
            "type": "number",
            "format": "float"
          },
          "countOfRatings": {
            "type": "number",
            "format": "integer"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "thumbnail": {
            "type": "string"
          },
          "cast": {
            "$ref": "#/components/schemas/cast_info"
          },
          "plotKeywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "movie_quote_combined": {
        "type": "object",
        "properties": {
          "movie_id": {
            "type": "string"
          },
          "quote_id": {
            "type": "string"
          },
          "time_ms": {
            "type": "number",
            "format": "integer"
          },
          "full_quote": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "year": {
            "type": "number",
            "format": "integer"
          },
          "rating": {
            "type": "number",
            "format": "float"
          },
          "countOfRatings": {
            "type": "number",
            "format": "integer"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "thumbnail": {
            "type": "string"
          },
          "cast": {
            "$ref": "#/components/schemas/cast_info"
          },
          "plotKeywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "movies": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/movie"
        }
      },
      "query_search_response": {
        "type": "object",
        "properties": {
          "movies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/movie_quote_combined"
            }
          },
          "category_list": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "cast_info": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "actor": {
              "type": "string"
            },
            "character": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}